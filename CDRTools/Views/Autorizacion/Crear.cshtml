@model CDRTools.Models.ParentViewModel


@{



}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()




    <div class="form-horizontal">
        <h4>Autorizacion</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.aut.Id_Autorizacion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.aut.Id_Autorizacion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.aut.Id_Autorizacion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.aut.Autorizacion_Codigo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.aut.Autorizacion_Codigo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.aut.Autorizacion_Codigo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.aut.Id_Extension, "Id_Extension", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                    @Html.DropDownListFor(m => m.aut.Id_Extension, Model.ListaExtensiones, "-Seleccione-")
                
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    $(document).ready(function () {
        $(":submit").click(function (e) {
            e.preventDefault();
            var id = $("#aut_Id_Autorizacion").val();
            var cod = $("#aut_Autorizacion_Codigo").val();
            var ext = $("#aut_Id_Extension").val();

            $.post("/Autorizacion/CrearAutorizacion", { id_autorizacion: id, codigo: cod, id_extension: ext }, function () {
                //$(gridContent).hide();
                alert("listo")
            });
        });
    });

</script>
