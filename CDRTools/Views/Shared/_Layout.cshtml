@using CDRTools.Helpers

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CDRTools</title>
    @{
        var theme = Bootstrap.Themes.First();

        @Styles.Render(Bootstrap.Bundle(theme))

        ViewBag.sessionInit = Session["sessionInit"] == null ? false : Session["sessionInit"];
    }
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("Scripts", required: false)
    @RenderSection("topLevel", required: false)
    @RenderSection("Sidebar", required: false)
    @RenderSection("Menue", required: false)
</head>
<body>
    <nav  class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" 
                        data-toggle="collapse" data-target="#navbar" 
                        aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span class="navbar-brand">CDRTools</span>
            </div>
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Actualizacion", "sideBar", "Llamada")</li>
                <li>@Html.ActionLink("Reportes", "Index", "Reporte")</li>
                <li>@Html.ActionLink("Configuracion", "ConfigMenu", "Settings")</li>
                <li>@Html.ActionLink("Ext", "Index", "Extension")</li>
            </ul>

            <div id="navbar" class="navbar-collapse collapse">
                @if ((bool)ViewBag.sessionInit)
                {
                    @Html.Partial("_MenuPartial");
                }
            </div>


        </div>
    </nav>

    @RenderPage("~/Views/Llamada/_ReportesLlamada.cshtml");

   
    <div id="bdy" class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Citel SA de CV</p>
        </footer>
    </div>

</body>
</html>
    