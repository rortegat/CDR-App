@using CDRTools.Helpers

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CDRTools</title>
    @{
        var theme = Bootstrap.Themes.First();

        @Styles.Render(Bootstrap.Bundle(theme))

    }
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    
    <!-- Render Sections-->
    @RenderSection("Scripts", required: false)
    @RenderSection("topLevel", required: false)
    @Scripts.Render("~/Scripts/site.js")
    
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">    
        <div class="container">
            <div class="navbar-header">   
                <a class="navbar-brand" href="/"><span class = "glyphicon glyphicon-star"></span> CDRTools</a>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
        </div>
    </div>
    

    <div id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
               <li class="custom-li">
                   <a class = "glyphicon glyphicon-book gi-5x" href=@Url.Action("_SelectReport","Reporte")><span>Reportes</span></a> 
               </li>
               <li class="custom-li">
                   <a class="glyphicon glyphicon-user" href=@Url.Action("Index","Extension")><span>Extensiones</span></a> 
               </li>
                <li class="custom-li">
                    <a class="glyphicon glyphicon-list" href=@Url.Action("Index","Autorizacion")><span>Autorizaciones</span></a>
                </li>
               <li class="custom-li">
                   <a class="glyphicon glyphicon-phone" href=@Url.Action("Index","Llamada")><span>Cargar Llamadas</span></a>
               </li>
               <li class="custom-li">
                   <a class="glyphicon glyphicon-cog" href=@Url.Action("ConfigMenu","Settings")><span>Configuración</span></a>
               </li>    
                <li class="custom-li">
                    <a class="glyphicon glyphicon-download-alt" href=@Url.Action("GetReporte","Reporte",new { id = 1 })><span>Exportar</span></a>
                </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->

        <a href="#ToggleSideMenu" class="glyphicon glyphicon-expand btn-lg btn" id="ToggleSideMenu"></a> 
        <div id="page-content-wrapper">       
            @RenderBody()
            <br />
            <br />
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Citel SA de CV</p>
            </footer>
        </div>
        <!-- /#page-content-wrapper -->
    </div>

</body>
</html>
